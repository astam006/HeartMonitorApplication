<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.odu.ece486.hm_app.HelpActivity"
    android:background="@android:color/black">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/helpScrollView">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="6dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/help_page_intro"
        android:text="Welcome to the Help Page!"
        android:textSize="25sp"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:gravity="fill">
            <Button
                android:id="@+id/test_help_button"
                android:layout_weight="1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Test Help"
                android:textColor="@android:color/white"
                android:drawableTop="@drawable/test_icon"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn about taking the test."
                android:padding="8dp"
                android:layout_weight="1"
                android:id="@+id/test_help_text"
                android:textColor="@android:color/white"
                android:gravity="top"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill"
            android:layout_marginTop="35dp"
            android:paddingTop="4dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/settings_help_button"
                android:layout_weight="1"
                android:onClick="onSettingsHelpClick"
                android:text="Settings Help"
                android:textColor="@android:color/white"
                android:drawableTop="@drawable/settings_icon"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:text="Learn about what settings you can modify."
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:id="@+id/settings_help_text"
                android:gravity="top"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill"
            android:layout_marginTop="50dp"
            android:paddingTop="4dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/results_help_button"
                android:layout_weight="1"
                android:onClick="onResultsHelpClick"
                android:textColor="@android:color/white"
                android:text="Results Help"
                android:drawableTop="@drawable/ic_results"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:text="Get help understanding your test results."
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:id="@+id/results_help_text"
                android:gravity="top"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill"
            android:layout_marginTop="50dp"
            android:paddingTop="4dp"
            android:layout_weight="1">
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/return_menu_button"
                android:layout_weight="1"
                android:onClick="onMainMenuClick"
                android:textColor="@android:color/white"
                android:text="Main Menu"
                android:drawableTop="@drawable/ic_back"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:text="Return to the Main Menu."
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:id="@+id/return_menu_text"
                android:gravity="top"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
