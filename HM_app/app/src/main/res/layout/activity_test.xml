<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/edu.odu.ece486.hm_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.odu.ece486.hm_app.TestActivity"
    android:background="@android:color/background_dark">

    <edu.odu.ece486.hm_app.TestView
        android:background="#ff8e8e8e"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        app:exampleDimension="24sp"
        app:exampleColor="@android:color/darker_gray"
        app:exampleDrawable="@drawable/view_background"
        android:id="@+id/pressureView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value: "
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/pressureView"
        android:layout_toLeftOf="@id/pressureView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth: "
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/pressureView"
        android:layout_toStartOf="@+id/pressureView"
        android:layout_marginTop="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Remaining"
        android:id="@+id/timeRemainingLabel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="166dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:linksClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/timerValueView"
        android:layout_alignTop="@+id/timeRemainingLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignRight="@+id/timeRemainingLabel"
        android:layout_alignEnd="@+id/timeRemainingLabel"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:linksClickable="true"
        android:textSize="30sp" />


</RelativeLayout>
